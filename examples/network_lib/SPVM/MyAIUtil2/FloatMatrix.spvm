class MyAIUtil2::FloatMatrix {
  allow MyAIUtil2;

  has nrow : public rw int;
  has ncol : public rw int;
  has data : public rw float[];
  
  # Class Method
  static method from_ndarray : MyAIUtil2::FloatMatrix ($ndarray : R::NDArray::Float) {
    
    my $matrix = new MyAIUtil2::FloatMatrix;
    
    $matrix->{data} = $ndarray->data;
    
    $matrix->{nrow} = $ndarray->nrow;
    
    $matrix->{ncol} = $ndarray->ncol;
    
    return $matrix;
  }
}
